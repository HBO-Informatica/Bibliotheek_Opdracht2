@model SyntheseOpdracht2.MVC.Models.GenreLijstVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Genres</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Code</th>
            <th>Omschrijving</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.Genres)
        {
            <tr>
                <td>@genre.Id</td>
                <td>@genre.Omschrijving</td>
                <td>
                    @Html.ActionLink(" ", "Verwijderen", "Genre", new { code = genre.Id }, new { @class = "glyphicon glyphicon-trash" })
                    &nbsp;
                    @Html.ActionLink(" ", "Bewerken", "Genre", new { code = genre.Id }, new { @class = "glyphicon glyphicon-pencil" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Toevoegen", "Toevoegen", "Genre", null, new { @class = "btn btn-primary" })